{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "declaration": true,
      "outDir": "./dist",
      "noEmitOnError": true,
      "strict": true,
      "noUnusedParameters": false,
      "noUnusedLocals": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "removeComments": true,
      "strictNullChecks": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
    },
    "include": [
      "src/**/*"
    ]
  }